  @{
  Layout = "_Layout";
}
<div class="container pt-2 my-5 border">
    @using VendorOrder.Models;

    <h1>Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h3>No vendors have been added yet!</h3>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3 class="vendorDescription"><a href='/vendor/@vendor.Id'>@vendor.Name</a></h3> <span>- @vendor.Description</span>
    }
<br>
    <h6><a href='/Vendor/new'>Add a new Vendor</a></h6>

    <p><a href='/'>Back home</a></p>
</div>