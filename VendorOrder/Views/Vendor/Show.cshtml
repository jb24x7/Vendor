  @{
  Layout = "_Layout";
}

@using VendorOrder.Models;

<div class="container pt-2 my-5 border">
  <h3>Here are all the orders by @Model["vendor"].Name:</h3>

  <ol>
  @if (@Model["vendor"].Orders.Count == 0)
  {
    <h5>@Model["vendor"].Name has not made any orders yet!</h5>
  } 

  @foreach (Orders orders in @Model["orders"])
  {
    <li><a href='/vendor/@Model["vendor"].Id/orders/@orders.Id'>@orders.Title</a></li>
  }
  </ol>

  <p><a href='/vendor/@Model["vendor"].Id/orders/new'>New Order</a></p>
  <p><a href='/vendor'>Vendors</a></p>
  <p><a href='/'>Home Page</a></p>
</div>